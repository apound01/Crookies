  </head>

    <body>
      <main>
        <br>
        <br>
        <br>
        <br>
        <div class="product-list">
          <% include ../views/partial/_header %>
          <a href="javascript:void(0)" onclick="document.getElementById('light').style.display='block';
                                                document.getElementById('fade').style.display='block'">
            <div class="container">
              <button type="button" class="btn btn-success ribbon">Custom Crookie</button>
            </div>
          </a>
          <div id="light" class="white_content">
            <form action="/custom" method="post">
              </br>
              <button class="btn btn-lg btn-danger" type="subit" value="Extra Spicy Crookie">Extra Spicy</button>
              </br>
              <button class="btn btn-lg btn-success" type="subit" value="Extra Salty Crookie">Extra Salty</button>
              </br>
              <button class="btn btn-lg btn-danger" type="subit" value="Extra Sour Crookie">Extra Sour</button>
              </br>
              <button class="btn btn-lg btn-success" type="subit" value="Extra Bitter Crookie">Extra Bitter</button>
            </form>
            <a href="javascript:void(0)" onclick="document.getElementById('light').style.display='none';
                                                  document.getElementById('fade').style.display='none'">
              Close</a>
          </div>
          <div id="fade" class="black_overlay"></div>
        </div>
        <div id="productbox">
          <% products.forEach( (product) => { %>
            <%- include('partial/_product', {product: product}); %>
          <% }); %>
        </div>
      </main>
    <h1 class="break">   </h1>
    <footer>
      <% include ../views/partial/_footer %>
    </footer>
  </body>


</html>
