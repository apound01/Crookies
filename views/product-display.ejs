  </head>

  <body>
    <div class="product-list">
      <% include ../views/partial/_header %>
      <form action="/custom" method="post">
        <select class="form-control"
                  name="flavour">
                  <option value="Spicy">Extra Spicy</option>
                  <option value="Salty">Extra Salty</option>
                  <option value="Sour">Extra Sour</option>
                  <option value="Bitter">Extra Bitter</option>
        </select>
        <button type="submit" class="btn btn-big">Custom Crookie</button>
      </form>
        <% products.forEach( (product) => { %>
          <%- include('partial/_product', {product: product}); %>
          <% }); %>
    </div>
  </body>

  <footer>
    <% include ../views/partial/_footer %>
  </footer>

