<div class="container">
  <table id="cart" class="table table-hover table-condensed">
            <thead>
            <tr>
              <th style="width:8%"></th>
              <th style="width:12%"></th>
              <th style="width:15%"></th>
              <th style="width:20%"></th>
              <th style="width:10%"></th>
              <th style="width:20%"></th>
              <th style="width:10%"></th>
              <th style="width:5%"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td data-th="Order ID"><h5><%= order.id %></h5>
              </td>
              <td data-th="Client"><h5><%= order.first_name %> <%= order.last_name %></h5></td>
              <td data-th="Shipping Information">
                  <strong><%= order.shipping_address %></strong></h5></br>
                  <strong><%= order.shipping_city %></strong></br>
                  <strong><%= order.shipping_postalcode %></strong></br>
                  <strong><%= order.shipping_country %></strong>
              </td>
              <td data-th="Product">
                <% for (i in line_items) { %>
                <% if (line_items[i].order_id === order.id) { %>
                <strong><%= line_items[i].product_name %><strong></br>
                <% } %>
                <% }; %>
              </td>
              <td data-th="Quantity">
                <% for (i in line_items) { %>
                <% if (line_items[i].order_id === order.id) { %>
                <strong><%= line_items[i].quantity %><strong></br>
                <% } %>
                <% }; %>
              </td>
              <td data-th="Crookie Note">
                <% for (i in line_items) { %>
                <% if (line_items[i].order_id === order.id) { %>
                <strong><%= line_items[i].crookie_note %><strong></br>
                <% } %>
                <% }; %>
              </td>
              <td data-th="Total"><strong><%= order.total_price %><strong></td>
              <% if(order.shipped === true) {%>
                <td><div class="btn-group" data-toggle="buttons">
                  <label class="btn btn-success focus">
                    <input id="<%= order.id %>" class="checkbox" data-shipped="<%= order.shipped %>" type="checkbox" autocomplete="off" checked>
                    <span class="glyphicon glyphicon-ok"></span>
                </td>
              <% } else { %>
                <td><div class="btn-group" data-toggle="buttons">
                  <label class="btn btn-success active focus">
                    <input id="<%= order.id %>" class="checkbox" data-shipped="<%= order.shipped %>" type="checkbox" autocomplete="off" checked>
                    <span class="glyphicon glyphicon-ok"></span>
                </td>
              <% } %>
                </label>
              </div>
            </tr>
          </tbody>
        </table>
</div>


